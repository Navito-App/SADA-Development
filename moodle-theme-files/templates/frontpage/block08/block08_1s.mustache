<!-- Teachers -->
<div class="almond-block teacher-block">
    <div class="container">
        <div class="row align-items-center">
            <div class="col col-lg-7">
                <div class="text-start text-dark wow fadeInUp">
                    <div class="heading-text">
                        {{block08header}}
                    </div>
                    <h2 class="heading-description">
                        {{{block08caption}}}
                    </h2>
                </div>
            </div>
            <div class="col col-lg-5 d-lg-flex d-none justify-content-end">
                <div class="carousel-arrow">
                    <button type="button" class="teacher_left_arrow">
                        <i class="fa-solid fa-long-arrow-left"></i>
                    </button> 
                    <button type="button" class="teacher_right_arrow">
                        <i class="fa-solid fa-long-arrow-right"></i>
                    </button>
                </div>
            </div>
        </div>        
        <!-- Row  -->
        <div class="row">
            <div class="carousel-arrow-sm d-xs-block d-sm-block d-md-block d-lg-none">
                <button type="button" class="teacher_left_arrow"><i class="fa-solid fa-long-arrow-left"></i></button>
                <button type="button" class="teacher_right_arrow"><i class="fa-solid fa-long-arrow-right"></i></button>
            </div>
            <div class="swiper swiper-teacher">
                <div class="swiper-wrapper">
                    {{#block08}}
                    <div class="swiper-slide">
                        <div class="card teacher-card h-100">
                            <div class="teacher-image">
                                <a href="{{teacherlink}}">
                                    <img src="{{userpictureURL}}" alt="teacher">
                                </a>
                            </div>
                            <div class="card-content">
                                <h4 class="teacher-name">
                                    <a href="{{teacherlink}}" 
                                    {{#block08showdescription}} data-bs-toggle="tooltip" data-placement="top" 
                                    title="{{#shortentext}} 250, {{{description}}} {{/shortentext}}" {{/block08showdescription}}>
                                        {{teachername}}
                                    </a>
                                </h4>
                                <p class="teacher-job">{{job}}&nbsp;</p>
                                {{#block08total}}
                                <ul class="teacher-info unordered-list-center mb-0">
                                    <li>
                                        <i class="fa-solid fa-people-group"></i>
                                        <span>{{studentscount}} {{#str}}student, grades{{/str}}</span>
                                    </li>
                                    <li>
                                        <i class="fa-solid fa-user-graduate"></i> 
                                        <span>{{coursecount}} {{#str}}courses, admin{{/str}}</span>
                                    </li>
                                </ul>
                                {{/block08total}}
                            </div>
                        </div>
                    </div>
                    {{/block08}}
                </div>
            </div>
        </div>
    </div>    
</div>
<!-- Teachers End -->
<script>
const swiper_teachers = new Swiper('.swiper-teacher', {
    // Optional parameters
    autoplay: {
        delay: 5000,
    },
    slidesPerView: 1,
    spaceBetween: 20,
    // Navigation arrows
    navigation: {
        nextEl: '.teacher_right_arrow',
        prevEl: '.teacher_left_arrow',
    },
    // Responsive breakpoints
    breakpoints: {
    // when window width is >= 320px
    960: {
      slidesPerView: 2,
      spaceBetween: 30
    },
    1140: {
      slidesPerView: 3,
      spaceBetween: 20
    }
  }
});
</script>