    <div class="almond-block page-banner 
        {{#frontpagenavchoice2}} page-banner-padding-top {{/frontpagenavchoice2}}">
        <div class="rounded-3">
            <div class="page-banner-content">
                <div class="container">
                    <div class="banner-image-1" style="background-image:url({{page03img}});">                   
                        <div class="row align-items-center">
                            <div class="col-lg-8">
                                <ul class="page-breadcrumb unordered-list">
                                    <li>
                                        <a href="?">{{#str}}home, moodle{{/str}}</a>
                                    </li>
                                    <li>
                                        <a href="?zuumpage=2">{{#str}}course, moodle{{/str}}</a>
                                    </li>
                                    <li>
                                        {{page03navbar}}
                                    </li>
                                </ul>
                                <h2 class="banner-big-title">
                                    {{#shortentext}} 75, {{page03header}} {{/shortentext}}
                                </h2>
                                <div class="banner-description">
                                    {{#shortentext}} 500, {{{page03caption}}} {{/shortentext}}
                                </div>
                                {{#page03enrollbutton}}
                                <div class="btn-wrap d-grid gap-2 d-md-flex justify-content-md-start">
                                    <a class="btn btn-primary btn-lg px-4 me-md-2" href="{{page03enrollbuttonlink}}">
                                        <span>
                                            <small>{{page03enrollbutton}}</small> 
                                            <small>{{page03enrollbutton}}</small>
                                        </span>
                                    </a>
