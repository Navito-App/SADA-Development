<!-- Categories -->
<div class="container">
  <div class="text-center text-dark wow fadeInUp">
      <div class="heading-text">
          {{{block09header}}}
      </div>
      <h2 class="heading-description">
          {{block09caption}}
      </h2>
  </div>
  <div class="row g-4">
      {{#block09}}
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 wow fadeInRight" data-wow-delay=".2s">
          <div class="card h-100 categories-card rounded-3 p-3 {{#imgurl}}categories-img{{/imgurl}}"
            {{# imgurl }}style= "background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.5) ), 
            url('{{{imgurl}}}'); background-size: cover;"
            {{/ imgurl }}
            {{# bgcolor }}style= "background-color:{{bgcolor}};"
            {{/ bgcolor }}>
              <div class="card-body text-dark">
                  <i class="{{block09icon}} mb-3"></i>
                  <div class="card-content">
                  <h4 class="card-title">
                    <a href="{{catagoryURL}}">
                      {{#shortentext}} 37, {{catagoryname}} {{/shortentext}}
                    </a>
                  </h4>
                  <div class="categories-course mt-2">{{coursecount}}+ {{#str}}courses, moodle{{/str}}</div>
                  <a class="arrow fa fa-arrow-right" href="{{catagoryURL}}"></a>
                  </div>
              </div>
          </div>
      </div>
      {{/block09}}
  </div>
</div>
<!-- Categories End -->
