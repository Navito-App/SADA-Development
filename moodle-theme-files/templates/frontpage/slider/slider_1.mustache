<!-- Header Slider 1 -->
<div class="swiper swiper-zuum-slider">
    <div class="swiper-wrapper">
        {{#slides}}
        <div class="swiper-slide wow fadeInLeft">
            <div class="almond-block header-banner-block
                {{#frontpagenavchoice2}} page-banner-padding-top{{/frontpagenavchoice2}}">
                <div class="rounded-3">
                    <div class="container">
                        <div class="header-banner-content" {{#bgcolor}}style="background-color: {{bgcolor}};" {{/bgcolor}}>
                            <div class="row">
                                <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                    <h4 class="banner-small-title {{headercolor}}">
                                        {{header}}
                                    </h4>
                                    <h2 class="banner-big-title {{titlecolor}}">
                                        {{title}}
                                    </h2>
                                    <div class="banner-description">
                                        {{{caption}}}
                                    </div>
                                    <div class="btn-wrap d-grid gap-2 d-md-flex justify-content-md-start">
                                        {{#button}}
                                        <a class="btn btn-primary btn-lg px-4 me-md-2" href="{{buttonurl}}">
                                            <span>
                                                <small>{{button}}</small> 
                                                <small>{{button}}</small>
                                            </span>
                                        </a>
                                        {{/button}}
                                        {{#button2}}
                                        <a class="btn btn-primary btn-lg px-4 me-md-2" href="{{buttonurl2}}">
                                            <span>
                                                <small>{{button2}}</small> 
                                                <small>{{button2}}</small>
                                            </span>
                                        </a>
                                        {{/button2}}
                                    </div>
                                </div>
                                <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                                    <div class="banner-image-1">
                                        <div class="hero-banner-image">
                                            <img src="{{image}}" alt="slayt" onerror="this.remove()">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>      
                    </div>
                </div>
            </div>
        </div>
        {{/slides}}
    </div>
    {{#slidepagination}}
    <div class="swiper-pagination"></div>
    {{/slidepagination}}
    {{#progress}}
        <div class="autoplay-progress">
            <svg viewBox="0 0 48 48">
                <circle cx="24" cy="24" r="20"></circle>
            </svg>
            <span></span>
        </div>
    {{/progress}}    
</div>

<script>
    "use strict";
    var slideautoplay = {{slideautoplay}}
    if (slideautoplay == 1) {
        slideautoplay = { delay: 5000, disableOnInteraction: false, };
    } else {
        slideautoplay = false;
    }
    const progressCircle = document.querySelector(".autoplay-progress svg");
    const progressContent = document.querySelector(".autoplay-progress span");
    var swiperzuumslider = new Swiper(".swiper-zuum-slider", {
        speed: 2000,
        spaceBetween: 30,
        centeredSlides: true,
        autoplay: slideautoplay,
        effect: 'fade',
        fadeEffect: {
            crossFade: true
        },
        fadeEffect: {
            crossFade: true
        },
        pagination: {
            el: ".swiper-pagination",
            type: "fraction",
        },
        on: {
            autoplayTimeLeft(s, time, progress) {
            progressCircle.style.setProperty("--progress", 1 - progress);
            progressContent.textContent = `${Math.ceil(time / 1000)}s`;
            }
        }
    });
</script>
<!-- Header Slider 1 End -->
                        