<div class="almond-block">
    <div class="why-we-block" {{#block05color}}style="background-color: {{block05color}};"{{/block05color}}>
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="image-widget wow fadeInLeft">
                        {{#block05image}}
                        <img src="{{{block05image}}}" alt="block05">
                        {{/block05image}}
                    </div>
                </div>
                <div class="col-lg-6 section-heading">
                    <h2 class="heading-text-ww wow fadeInRight">{{block05header}}</h2>
                    <p class="heading-description-ww wow fadeInLeft">
                        {{{block05comment}}}
                    </p>
                    
                    <ul class="why-we-list unordered-list wow fadeInRight">
                        {{#block05}}
                        <li>
                            <i class="{{icon}}"></i>
                            <a class="text-decoration-none text-black" href="{{link}}">
                                <span class="fw-bold">{{{title}}}</span><br>
                            </a>
                            <span>{{{caption}}}</span>
                        </li>
                        {{/block05}}
                    </ul>

                    <div class="btn-wrap d-grid gap-2 d-md-flex justify-content-md-start">
                        <a class="btn btn-primary btn-lg px-4 me-md-2" href="{{block05buttonlink}}">
                            <span>
                                <small>{{block05button}}</small> 
                                <small>{{block05button}}</small>
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
