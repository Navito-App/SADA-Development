<div class="wwu-block" {{#block06color}}style="background-color: {{block06color}};"{{/block06color}}>
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-sm-12 section-heading">
                <h2 class="heading-text-wwu text-white wow fadeInRight">{{block06header}}</h2>
                <div class="heading-description-wwu text-white mb-0 wow fadeInLeft">
                    {{{block06caption}}}
                </div>
                <div class="btn-wrap d-grid gap-2 d-md-flex justify-content-md-start">
                    <a class="btn btn-primary btn-lg px-4 me-md-2" href="{{{block06buttonlink}}}">
                        <span>
                            <small>{{block06button}}</small> 
                            <small>{{block06button}}</small>
                        </span>
                    </a>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="row images-group decoration-wrap">
                    <div class="col col-md-6 col-sm-6 col-6 wow fadeInUp">
                        <div class="image-wrap">
                            {{#block06img1}} 
                            <img src="{{block06img1}}" alt="block06img">
                            {{/block06img1}}
                        </div>
                        <div class="image-wrap">
                            {{#block06img2}} 
                            <img src="{{block06img2}}" alt="block06img">
                            {{/block06img2}}
                        </div>
                    </div>
                    <div class="col col-md-6 col-sm-6 col-6 wow fadeInDown">
                        <div class="image-wrap">
                            {{#block06img3}} 
                            <img src="{{block06img3}}" alt="block06img">
                            {{/block06img3}}
                        </div>
                        <div class="image-wrap">
                            {{#block06img4}} 
                            <img src="{{block06img4}}" alt="block06img">
                            {{/block06img4}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
