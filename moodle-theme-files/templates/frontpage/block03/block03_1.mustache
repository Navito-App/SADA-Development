<!-- Features -->
<div class="almond-block features-block">
    <div class="container">
        <div class="row align-items-center">
            <div class="col col-lg-7">
                <div class="text-darkwow fadeInUp" data-wow-delay=".1s">
                    <div class="heading-text">
                       {{{block03header}}}
                    </div>
                    <h2 class="heading-description">
                        {{block03explanation}}
                    </h2>
                </div>
            </div>
        </div>
        <div class="row g-4">
            {{#block03}}
            <div class="col-lg-4 col-md-6">
                <div class="features-item">
                    <div class="title-wrap">
                        <a class="features-icon bg-icon text-decoration-none " href="{{link}}">
                            <i class="{{icon}}"></i>
                        </a>
                        <h3 class="features-title mb-0">
                            <span class="d-block">{{title}}</span>
                        </h3>
                    </div>
                    <p class="mb-0">
                        {{{caption}}}
                    </p>
                </div>
            </div>
            {{/block03}}
        </div>
    </div>
</div> 
<!-- Features End -->
